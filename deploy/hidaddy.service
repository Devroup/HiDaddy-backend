[Unit]
Description=Hidaddy Spring Boot
After=network-online.target
Wants=network-online.target

[Service]
User=root
WorkingDirectory=/root
Environment=SPRING_PROFILES_ACTIVE=prod
ExecStart=/usr/bin/java -jar /root/build/libs/hidaddy.jar --spring.profiles.active=prod
Restart=on-failure
RestartSec=5
SuccessExitStatus=143
TimeoutStartSec=30
TimeoutStopSec=15
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target