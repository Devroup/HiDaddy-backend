[Unit]
Description=HiDaddy Spring Boot Application
After=network.target

[Service]
# 실행할 사용자
User=ubuntu

# 작업 디렉터리 (JAR이 있는 폴더)
WorkingDirectory=/home/ubuntu/app

# 애플리케이션 실행 명령어
ExecStart=/usr/bin/java -jar /home/ubuntu/app/bloomway-0.0.1-SNAPSHOT.jar --spring.profiles.active=prod

# 서비스 동작 설정
Restart=always
RestartSec=5
SuccessExitStatus=143

# 로그를 파일에 저장
StandardOutput=append:/home/ubuntu/app/app.log
StandardError=append:/home/ubuntu/app/app.log

[Install]
WantedBy=multi-user.target
